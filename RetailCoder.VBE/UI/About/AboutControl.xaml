            </TextBlock>
        </StackPanel>
            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       Text="{Resx ResxName=Rubberduck.UI.RubberduckUI, Key=AboutWindow_Copyright}"
                       FontSize="8"
                       VerticalAlignment="Bottom"
                       Margin="10,0,0,10"/>
    </Grid>
</UserControl>
